@model SalaryWeb.Models.salary_db

@{
    ViewBag.Title = "Delete salary";
}

<h2>Delete salary</h2>

<h3>Are you sure you want to delete this post?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Amount
        </dt>

        <dd>
            @Html.DisplayFor(model => model.salaryAmount) @Html.DisplayFor(model => model.currency)
        </dd>

        <dt>
            Added by
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userinfo_db.name)
        </dd>

        <dt>
            Salary added
        </dt>

        <dd>
            @Html.DisplayFor(model => model.created_at)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Yes, delete" class="btn btn-default" /> |
            @Html.ActionLink("Go back", "Index")
        </div>
    }
</div>
